  }
}

# App rules
for_window [app_id="firefox" title="About Mozilla Firefox"] floating enable
for_window [app_id="firefox" title="^Picture-in-Picture$"] floating enable; sticky enable
for_window [title="fzf-switcher"] floating enable

# Change title of xwayland apps
for_window [shell=".*"] title_format "[%shell] %title"
for_window [shell="xdg_shell"] title_format "%title"

# Gtk settings
exec_always {
  gsettings set org.gnome.desktop.interface font-name "IBM Plex Sans 10"
  gsettings set org.gnome.desktop.interface font-antialiasing "rgba"
  #gsettings set org.gnome.desktop.interface icon-theme "Papirus-Dark"
  gsettings set org.gnome.desktop.interface color-scheme "prefer-dark"
}

#
# Autostart apps
#
exec mako
exec gammastep
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec playerctld daemon
#exec wl-paste -t text --watch clipman store --no-persist
#exec poweralertd
#exec_always xrdb .Xresources

# Additional config
include /etc/sway/config.d/*
