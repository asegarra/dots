bar {
  font pango:$font, Font Awesome 6 Free 9
  status_command i3status-rs
  tray_output *
  icon_theme Papirus-Dark
  colors {

    background $base00
    separator  $base05
    statusline $base04

    # State             Border  BG      Text
    # focused_workspace   $base0D $base00 $base0D
